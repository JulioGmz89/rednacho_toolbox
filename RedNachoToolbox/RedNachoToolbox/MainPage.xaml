<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RedNachoToolbox.MainPage"
             Title="Red Nacho ToolBox">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Navigation Sidebar -->
        <Border Grid.Column="0"
                BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#1A1A1A}"
                StrokeThickness="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <!-- Main Navigation Area -->
                <ScrollView Grid.Row="0">
                    <VerticalStackLayout Padding="16" Spacing="16">
                        <!-- App Branding -->
                        <Label Text="Red Nacho ToolBox"
                               FontSize="18"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               Margin="0,0,0,20" />
                        
                        <!-- Search Bar -->
                        <SearchBar x:Name="ToolSearchBar"
                                   Placeholder="Search tools..."
                                   BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#2A2A2A}"
                                   TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                                   PlaceholderColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                                   SearchButtonPressed="OnSearchButtonPressed"
                                   TextChanged="OnSearchTextChanged"
                                   Margin="0,0,0,16" />
                        
                        <!-- Navigation Buttons -->
                        <VerticalStackLayout Spacing="8">
                            <!-- All Applications Button -->
                            <Button x:Name="AllApplicationsButton"
                                    Text="All Applications"
                                    BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#2A2A2A}"
                                    TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                                    BorderColor="{AppThemeBinding Light=#DDDDDD, Dark=#444444}"
                                    BorderWidth="1"
                                    CornerRadius="6"
                                    FontSize="14"
                                    HeightRequest="40"
                                    HorizontalOptions="Fill"
                                    Clicked="OnAllApplicationsClicked" />
                            
                            <!-- Documentation Button -->
                            <Button x:Name="DocumentationButton"
                                    Text="Documentation"
                                    BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#2A2A2A}"
                                    TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                                    BorderColor="{AppThemeBinding Light=#DDDDDD, Dark=#444444}"
                                    BorderWidth="1"
                                    CornerRadius="6"
                                    FontSize="14"
                                    HeightRequest="40"
                                    HorizontalOptions="Fill"
                                    Clicked="OnDocumentationClicked" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </ScrollView>
                
                <!-- Settings Button (Bottom Anchored) -->
                <Border Grid.Row="1"
                        BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#0F0F0F}"
                        StrokeThickness="0"
                        Padding="16,12">
                    <Button x:Name="SettingsButton"
                            Text="⚙️ Settings"
                            BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#2A2A2A}"
                            TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                            BorderColor="{AppThemeBinding Light=#DDDDDD, Dark=#444444}"
                            BorderWidth="1"
                            CornerRadius="6"
                            FontSize="14"
                            HeightRequest="40"
                            HorizontalOptions="Fill"
                            Clicked="OnSettingsClicked" />
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1"
                BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#000000}"
                StrokeThickness="0">
            <ScrollView>
                <VerticalStackLayout Padding="24" Spacing="16">
                    <!-- Welcome Content -->
                    <Label Text="Welcome to Red Nacho ToolBox"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           Margin="0,20,0,10" />
                    
                    <Label Text="Select a tool from the sidebar to get started"
                           FontSize="16"
                           HorizontalOptions="Center"
                           TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                           Margin="0,0,0,20" />
                    
                    <!-- Content Placeholder -->
                    <Frame BackgroundColor="{AppThemeBinding Light=#F8F8F8, Dark=#2A2A2A}"
                           BorderColor="Transparent"
                           CornerRadius="8"
                           Padding="20"
                           HasShadow="True">
                        <VerticalStackLayout Spacing="12">
                            <Label Text="Main Content Area"
                                   FontSize="18"
                                   FontAttributes="Bold" />
                            
                            <Label Text="This area will display the selected tool or content. The layout uses a flexible Grid system where the sidebar maintains a fixed width of 250 pixels, and this content area automatically adjusts to fill the remaining space."
                                   FontSize="14"
                                   LineBreakMode="WordWrap" />
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>
            </ScrollView>
        </Border>
    </Grid>

</ContentPage>

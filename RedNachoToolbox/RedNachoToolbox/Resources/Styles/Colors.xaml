<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <Color x:Key="Primary">#512BD4</Color>
    <Color x:Key="PrimaryDark">#ac99ea</Color>
    <Color x:Key="PrimaryDarkText">#242424</Color>
    <Color x:Key="Secondary">#DFD8F7</Color>
    <Color x:Key="SecondaryDarkText">#9880e5</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>

    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>

    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

    <!-- Default light theme semantic colors (overridden at runtime by SettingsPage) -->
    <Color x:Key="PrimaryRed">#D32F2F</Color>
    <!-- Surfaces per MejoraDise単oUI: Light - surface-primary #F5F5F5, surface-secondary #FFFFFF, surface-tertiary #FFFFFF -->
    <Color x:Key="PageBackgroundColor">#F5F5F5</Color>
    <Color x:Key="SidebarBackgroundColor">#FFFFFF</Color>
    <Color x:Key="CardBackgroundColor">#FFFFFF</Color>
    <Color x:Key="CardAccentBackgroundColor">#F2F2F2</Color>
    <Color x:Key="CardShadowColor">#ACACAC</Color>
    <Color x:Key="ContentBackgroundColor">#FAFAFA</Color>

    <!-- Typography per MejoraDise単oUI: primary #212121, secondary #616161, tertiary/placeholder #9E9E9E, disabled #BDBDBD -->
    <Color x:Key="TextColor">#212121</Color>
    <Color x:Key="TextColorSecondary">#616161</Color>
    <Color x:Key="TextColorTertiary">#9E9E9E</Color>
    <Color x:Key="TextColorDisabled">#BDBDBD</Color>

    <Color x:Key="ButtonBackgroundColor">#F8F9FA</Color>
    <Color x:Key="ButtonTextColor">#212529</Color>
    <Color x:Key="ButtonBorderColor">#DEE2E6</Color>
    <Color x:Key="ButtonHoverBackgroundColor">#E9ECEF</Color>
    <Color x:Key="ButtonPressedBackgroundColor">#DEE2E6</Color>

    <!-- Primary (prominent) button colors - interactive blue in light theme -->
    <Color x:Key="PrimaryButtonBackgroundColor">#1976D2</Color>
    <Color x:Key="PrimaryButtonTextColor">#FFFFFF</Color>
    <Color x:Key="PrimaryButtonHoverBackgroundColor">#0288D1</Color>
    <Color x:Key="PrimaryButtonPressedBackgroundColor">#1565C0</Color>

    <Color x:Key="BorderColorLight">#DEE2E6</Color>
    <Color x:Key="BorderColorMedium">#ADB5BD</Color>
    <Color x:Key="BorderColorDark">#6C757D</Color>

    <Color x:Key="InputBackgroundColor">#FFFFFF</Color>
    <Color x:Key="InputBorderColor">#CED4DA</Color>
    <Color x:Key="InputTextColor">#212529</Color>
    <Color x:Key="InputPlaceholderColor">#9E9E9E</Color>
    <!-- Interactive focus border moves to blue per MejoraDise単oUI -->
    <Color x:Key="InputFocusBorderColor">#2196F3</Color>

    <Color x:Key="SuccessColor">#198754</Color>
    <Color x:Key="WarningColor">#FFC107</Color>
    <Color x:Key="ErrorColor">#D32F2F</Color>
    <Color x:Key="InfoColor">#0DCAF0</Color>

    <Color x:Key="SelectionColor">#1976D2</Color>
    <Color x:Key="SelectionBackgroundColor">#E8F0FE</Color>
    <!-- Hover overlay approximation (4% black over white) -->
    <Color x:Key="HighlightColor">#0A000000</Color>

    <Color x:Key="NavigationBackgroundColor">#F8F9FA</Color>
    <Color x:Key="NavigationTextColor">#212529</Color>
    <Color x:Key="NavigationSelectedBackgroundColor">#E8F0FE</Color>
    <Color x:Key="NavigationSelectedTextColor">#FFFFFF</Color>
    <Color x:Key="NavigationHoverBackgroundColor">#E9ECEF</Color>

    <Color x:Key="SettingsBackgroundColor">#FFFFFF</Color>
    <Color x:Key="SettingsBorderColor">#DEE2E6</Color>
    <Color x:Key="SettingsTextColor">#212529</Color>
    <Color x:Key="SettingsSecondaryTextColor">#6C757D</Color>

    <!-- Semantic color tokens (PascalCase aliases of MejoraDise単oUI tokens) -->
    <!-- color-brand-primary -->
    <Color x:Key="BrandPrimaryColor">#D32F2F</Color>
    <!-- color-interactive-primary / color-interactive-secondary -->
    <Color x:Key="InteractivePrimaryColor">#1976D2</Color>
    <Color x:Key="InteractiveSecondaryColor">#0288D1</Color>
    <!-- color-border-interactive -->
    <Color x:Key="BorderInteractiveColor">#2196F3</Color>
    <!-- color-text-interactive -->
    <Color x:Key="TextInteractiveColor">#FFFFFF</Color>
    <!-- color-icon-primary / color-icon-interactive -->
    <Color x:Key="IconPrimaryColor">#616161</Color>
    <Color x:Key="IconInteractiveColor">#1976D2</Color>
    <!-- color-status-error -->
    <Color x:Key="StatusErrorColor">#D32F2F</Color>
    <!-- color-state-hover-overlay / color-state-disabled-bg -->
    <Color x:Key="HoverOverlayColor">#0A000000</Color>
    <Color x:Key="DisabledBackgroundColor">#E0E0E0</Color>

</ResourceDictionary>
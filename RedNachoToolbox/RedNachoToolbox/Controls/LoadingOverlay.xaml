<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Class="RedNachoToolbox.Controls.LoadingOverlay"
       IsVisible="False"
    BackgroundColor="#80000000"
    InputTransparent="False">
    
    <Grid>
     <Border BackgroundColor="{DynamicResource CardBackgroundColor}"
      Stroke="{DynamicResource BorderColorLight}"
        StrokeThickness="1"
      Padding="32"
  WidthRequest="200"
        HeightRequest="150"
     HorizontalOptions="Center"
         VerticalOptions="Center">
   <Border.StrokeShape>
            <RoundRectangle CornerRadius="16" />
            </Border.StrokeShape>
        
  <Border.Shadow>
 <Shadow Brush="#000000"
         Offset="0,8"
    Radius="24"
            Opacity="0.25" />
 </Border.Shadow>
         
<VerticalStackLayout Spacing="16"
 HorizontalOptions="Center"
     VerticalOptions="Center">
           
                <ActivityIndicator IsRunning="True"
             Color="{DynamicResource InteractivePrimaryColor}"
           WidthRequest="48"
      HeightRequest="48" />
    
          <Label Text="{Binding Message, Source={RelativeSource AncestorType={x:Type ContentView}}}"
       FontSize="16"
           TextColor="{DynamicResource TextColor}"
     HorizontalOptions="Center"
      HorizontalTextAlignment="Center" />
      </VerticalStackLayout>
        </Border>
    </Grid>
</ContentView>
